<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/episode_art"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/episode_art" 
        android:contentDescription="@string/episode_row_art">
    </ImageView>
    
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/episode_art"
        android:lines="1"
        android:text="@+id/TextView01"
        android:textSize="16sp"
        android:textStyle="bold" >
    </TextView>
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/subtitle"
        android:layout_toRightOf="@+id/episode_art"
        android:layout_alignParentBottom="true"
        android:lines="1"
        android:text="@+id/TextView02"
        android:textSize="12sp">
    </TextView>
    
    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/subtitle"
        android:layout_toLeftOf="@+id/length"
        android:layout_alignParentBottom="true"
        android:lines="1"
        android:text="@+id/TextView03"
        android:textSize="12sp"
        android:layout_marginRight="8dp">
    </TextView>
    
    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/subtitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:lines="1"
        android:text="@+id/TextView04"
        android:textSize="12sp">
    </TextView>
    
    <ImageView
        android:id="@+id/row_action_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/episode_row_action_icon_download"
        android:scaleType="center"
        android:src="@drawable/ic_action_download_hl" >

    </ImageView>

</RelativeLayout> 